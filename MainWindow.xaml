<Window x:Class="Graphote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphote"
        mc:Ignorable="d" Width="1920" Height="1002" Left="0" Top="0" WindowState="Maximized" Background="#FF778DA9">
    <Grid x:Name="gridMain" HorizontalAlignment="Center" Height="997" VerticalAlignment="Center" Width="1914" Background="#FF1B263B">
        <Grid.RowDefinitions>
            <RowDefinition Height="780*"/>
            <RowDefinition Height="217*"/>
        </Grid.RowDefinitions>
        <Border x:Name="borderImage" BorderBrush="#FFFCEDED" BorderThickness="1,1,1,1" HorizontalAlignment="Left" Height="854" Margin="37,32,0,0" VerticalAlignment="Top" Width="1501" CornerRadius="7,7,7,7" Grid.RowSpan="2">
            <Canvas x:Name="Pic_canvas" Background="#FF080F16" Margin="1,1,1,1">
                <Label x:Name="lblCordenadas" Content="Coordenadas" Canvas.Left="6" Canvas.Top="805" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="9"/>
                <Label x:Name="lbl_coordenadaX" Content="" Canvas.Left="12" Canvas.Top="824" Foreground="White" FontSize="9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label x:Name="lbl_coordenadaY" Content="" Canvas.Left="56" Canvas.Top="824" Foreground="White" FontSize="9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label x:Name="lbl_coordenadaZ" Content="" Canvas.Left="100" Canvas.Top="824" Foreground="White" FontSize="9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Canvas>
        </Border>
        <Label x:Name="lblTitle" Content="Graphote" HorizontalAlignment="Left" Margin="0,-4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lbl_seleccionar" Content="Seleccionar" HorizontalAlignment="Left" Margin="58,4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lbl_seleccionar_reiniciar" Content="Reiniciar" HorizontalAlignment="Left" Margin="135,4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="lbl_seleccionar_salir" Content="Salir" HorizontalAlignment="Left" Margin="202,4,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Slider x:Name="slider_escala" HorizontalAlignment="Left" Margin="54,143,0,0" VerticalAlignment="Top" Width="1463" Maximum="2" TickFrequency="0.01" SmallChange="0.01" ValueChanged="Slider_ValueChanged" Value="1" Grid.Row="1"/>
        <Label x:Name="lblEscala" Content="Escala" HorizontalAlignment="Left" Margin="58,118,0,0" VerticalAlignment="Top" Foreground="White" Grid.Row="1"/>
        <Grid x:Name="grid_foco" HorizontalAlignment="Left" Height="252" Margin="1582,15,0,0" VerticalAlignment="Top" Width="317" Background="#FF1E2127">
            <Ellipse x:Name="btn_focusZ" HorizontalAlignment="Center" Height="50" Margin="0,25,0,0" VerticalAlignment="Top" Width="50" Fill="#FF19398E" Cursor="Hand"/>
            <Border BorderBrush="#FF151719" BorderThickness="1" CornerRadius="3,3,3,3" Panel.ZIndex="-1" RenderTransformOrigin="0.428,0.407" Cursor="Hand"/>
            <Ellipse x:Name="btn_focusX" HorizontalAlignment="Left" Height="50" Margin="68,117,0,0" VerticalAlignment="Top" Width="50" Fill="#FF8E1919" Cursor="Hand"/>
            <Ellipse x:Name="btn_focusY" HorizontalAlignment="Left" Height="50" Margin="194,142,0,0" VerticalAlignment="Top" Width="50" Fill="#FF1B8E19" Cursor="Hand"/>
            <Rectangle HorizontalAlignment="Left" Height="2" Margin="105,116,0,0" Stroke="White" VerticalAlignment="Top" Width="58" Fill="White" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="-1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-30.401"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle HorizontalAlignment="Left" Height="2" Margin="147,127,0,0" Stroke="White" VerticalAlignment="Top" Width="76" Fill="White" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="-1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="44.841"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle HorizontalAlignment="Center" Height="2" Margin="0,86,0,0" Stroke="White" VerticalAlignment="Top" Width="31" Fill="White" RenderTransformOrigin="0.5,0.5" Panel.ZIndex="-1">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="90.442"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Label x:Name="lbl_focusZ" Content="Z" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" FontSize="13" FontWeight="Bold" Cursor="Hand"/>
            <Label x:Name="lbl_focusX" Content="X" HorizontalAlignment="Left" Margin="80,128,0,0" VerticalAlignment="Top" FontSize="13" FontWeight="Bold" Cursor="Hand"/>
            <Label x:Name="lbl_focusY" Content="Y" HorizontalAlignment="Left" Margin="210,153,0,0" VerticalAlignment="Top" FontSize="13" FontWeight="Bold" Cursor="Hand"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="577" Margin="1582,309,0,0" VerticalAlignment="Top" Width="317" Grid.RowSpan="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF1E2127"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Border BorderBrush="#FF151719" BorderThickness="1" CornerRadius="3,3,3,3" Panel.ZIndex="-1"/>
        </Grid>
        <Label x:Name="lbl_figura" Content="Figura" HorizontalAlignment="Left" Margin="1596,320,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="13"/>
        <Label x:Name="lbl_figura_Copiar" Content="Transformaciones" HorizontalAlignment="Left" Margin="1596,369,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="13"/>
        <Label x:Name="lbl_figura_Copiar1" Content="Rotar" HorizontalAlignment="Left" Margin="1596,410,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="30" Margin="1582,440,0,0" VerticalAlignment="Top" Width="48" Background="#FF151F28" CornerRadius="0,3,3,0" Tag="">
            <Label Content="X" Margin="15,0,9,0" Foreground="White" FontSize="16"/>
        </Border>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="30" Margin="1582,475,0,0" VerticalAlignment="Top" Width="48" Background="#FF151F28" CornerRadius="0,3,3,0" Tag="">
            <Label Content="X" Margin="15,0,9,0" Foreground="White" FontSize="16"/>
        </Border>
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="30" Margin="1582,510,0,0" VerticalAlignment="Top" Width="48" Background="#FF151F28" CornerRadius="0,3,3,0" Tag="">
            <Label Content="X" Margin="15,-2,9,2" Foreground="White" FontSize="16"/>
        </Border>
    </Grid>
</Window>
